var SlowLorisDancer = function(top, left, timeBetweenSteps, rotation){
  Dancer.call(this, top, left, timeBetweenSteps);
  this.$node = $('<span class="slowLoris"></span>');
  this.step();
  this.setPositionRotation(top, left, rotation);
};

